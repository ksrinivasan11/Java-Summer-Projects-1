import java.lang.Math;
import java.util.Scanner;
public class Distance
{
    public static void main(String args[])
    {
        Scanner scancoord = new Scanner(System.in);
        
        System.out.print("X1: ");
        int x1 = scancoord.nextInt();
        System.out.print("Y1: ");
        int y1 = scancoord.nextInt();
        System.out.print("X2: ");
        int x2 = scancoord.nextInt();
        System.out.print("Y2: ");
        int y2 = scancoord.nextInt();
        
        double data1 = x2 - x1;
        double data2 = y2 - y1;
        
        double pow1 = Math.pow(data1, 2);
        double pow2 = Math.pow(data2, 2);
        
        double dif = pow1 + pow2;
        double distance = Math.sqrt(dif);
        
        System.out.print("Distance between Two Points: "+distance);
    }
}
